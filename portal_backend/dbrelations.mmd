    TrustModel {
        int id PK
        string name 
        text description
        boolean eudi_compliant
    }

    YiviTrustModelEnv {
        int id PK
        int trust_model_id FK
        string env
        string timestamp_server
        string keyshare_server
        string keyshare_website
        string keyshare_attribute
        string contact
        string minimum_android_version
        string minimum_ios_version
        string description_en
        string description_nl
        string url
    }
    
    AttestationProvider {
        int id PK
        int yivi_tme_id FK
        int org_id FK
        string version
        string shortname_en
        string shortname_nl
        string contact_url
        string base_url
    }

    Credential {
        int id PK
        int attestation_provider_id FK
        string credential_tag
        string name_en
        string name_nl
        string description_en
        string description_nl
    }

    CredentialAttribute {
        int id PK
        string name
